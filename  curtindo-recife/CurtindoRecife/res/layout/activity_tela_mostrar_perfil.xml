<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaMostrarPerfil" >

    <TextView
        android:id="@+id/txtEmailPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtNomePerfil"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="16dp"
        android:text="email" />

    <TextView
        android:id="@+id/txtNomePerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Nome"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="37dp"
        android:text="Mascates: " />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="40dp"
        android:text="Eventos disponÃ­veis: " />

    <TextView
        android:id="@+id/txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/txtEmailPerfil"
        android:layout_marginTop="30dp"
        android:text="Eventos favoritos: "
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtNomePerfil"
        android:layout_alignBottom="@+id/txtNomePerfil"
        android:layout_alignParentLeft="true"
        android:text="Nome: " />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtEmailPerfil"
        android:layout_alignLeft="@+id/textView3"
        android:text="E-mail: " />

    <TextView
        android:id="@+id/txtMascate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_toRightOf="@+id/textView7"
        android:text="valor" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_toLeftOf="@+id/txtSexoPerfil"
        android:text="Sexo: " />

    <TextView
        android:id="@+id/txtEventoDisponivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:text="valor" />

    <Button
        android:id="@+id/btnEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmailPerfil"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="#EE0000"
        android:text="Editar"
        android:textColor="#EEEEEE" />

    <TextView
        android:id="@+id/txtSexoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtDataPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignRight="@+id/textView2"
        android:text="data" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_centerVertical="true"
        android:text="Data de Nascimento:" />

    <ImageView
        android:id="@+id/imgEvento1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtData"
        android:layout_toLeftOf="@+id/txtMascate"
        android:src="@drawable/imgencontro_50x50" />

    <ImageView
        android:id="@+id/imgEvento2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgEvento1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/imgencontro_50x50" />

    <ImageView
        android:id="@+id/imgEvento3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSexoPerfil"
        android:layout_alignTop="@+id/imgEvento2"
        android:layout_marginLeft="24dp"
        android:src="@drawable/imgencontro_50x50" />

</RelativeLayout>