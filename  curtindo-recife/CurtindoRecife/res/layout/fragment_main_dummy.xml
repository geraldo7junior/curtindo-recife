<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imgEventoCadastrado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curtindo_back"
    android:padding="7dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaPrincipal" >

    <Button
        android:id="@+id/btnCadastrarEvento"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_x="99dp"
        android:layout_y="402dp"
        android:background="#FF0000"
        android:fontFamily="Segoe UI"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Criar Evento"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/btnEvento1"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_x="16dp"
        android:layout_y="175dp"
         />

    <TextView
        android:id="@+id/txtEvento1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="267dp"
        android:text="Shows"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/btnEvento2"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_x="115dp"
        android:layout_y="175dp" />

    <ImageButton
        android:id="@+id/btnEvento3"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_x="212dp"
        android:layout_y="170dp"
        />

    <TextView
        android:id="@+id/txtEvento3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="219dp"
        android:layout_y="267dp"
        android:text="Esportes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    

    <Button
        android:id="@+id/btnNight"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_x="219dp"
        android:layout_y="110dp"
        android:background="#1C1C1C"
        android:text="Night"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnTop10"
        android:layout_width="78dp"
        android:layout_height="33dp"
        android:layout_x="14dp"
        android:layout_y="110dp"
        android:background="#FFD700"
        android:text="Top10"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtEvento2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="128dp"
        android:layout_y="267dp"
        android:text="Teatro"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_x="0dp"
        android:layout_y="20dp"
        android:background="#0000FF"
        android:text="Login"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/btnAgenda"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_x="250dp"
        android:layout_y="6dp"
        android:src="@android:drawable/ic_menu_my_calendar" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="219dp"
        android:layout_height="34dp"
        android:layout_x="50dp"
        android:layout_y="328dp"
        android:background="#0CC0F0"
        android:text="Todos os Eventos"
        android:textColor="#FFFFFF" />

</AbsoluteLayout>