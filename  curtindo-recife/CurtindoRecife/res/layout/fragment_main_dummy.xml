<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="7dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaPrincipal" >

    <ImageButton
        android:id="@+id/btnAgenda"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_x="208dp"
        android:layout_y="11dp"
        android:src="@android:drawable/ic_menu_my_calendar" />

    <Button
        android:id="@+id/btnCadastrarEvento"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_x="99dp"
        android:layout_y="402dp"
        android:background="#FF0000"
        android:fontFamily="Segoe UI"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Criar Evento"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_x="15dp"
        android:layout_y="30dp"
        android:background="#0000FF"
        android:text="Login"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/btnTeatro"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_x="118dp"
        android:layout_y="130dp"
        android:src="@drawable/teatro" />

    <ImageButton
        android:id="@+id/btnEsportes"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_x="221dp"
        android:layout_y="134dp"
        android:src="@drawable/esportes" />

    <TextView
        android:id="@+id/txtEsportes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="229dp"
        android:layout_y="214dp"
        android:text="Esportes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/btnShows"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_x="22dp"
        android:layout_y="133dp"
        android:src="@drawable/shows" />

    <TextView
        android:id="@+id/txtShows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="38dp"
        android:layout_y="217dp"
        android:text="Shows"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnEsqueciSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="236dp"
        android:layout_y="262dp"
        android:text="Outros"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtTeatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="134dp"
        android:layout_y="225dp"
        android:text="Teatro"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button1"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="266dp"
        android:background="#0CC0F0"
        android:text="Todos os Eventos"
        android:textColor="#FFFFFF" />

</AbsoluteLayout>